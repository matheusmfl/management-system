generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Corretor {
  id       String     @id @default(uuid())
  name     String
  username String     @unique
  isAdmin  Boolean
  Proposta Proposta[]

  @@map("corretor")
}

model Client {
  id           String     @id @default(uuid())
  Name         String
  Cpf          Int
  Observations String?
  Seguros      Proposta[]

  @@map("client")
}

model Proposta {
  id             String   @id @default(uuid())
  numeroProposta String
  seguradora     String
  dataVencimento DateTime
  corretor       Corretor @relation(fields: [corretorId], references: [id])
  corretorId     String
  client         Client   @relation(fields: [clientId], references: [id])
  clientId       String

  @@map("proposta")
}
